<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/default_blue" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/logo"
        android:tag="0"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settingsBtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:tag="4" />

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/wifiBtn"
        android:layout_toLeftOf="@+id/imageButton1"
        android:background="@drawable/settings"
        android:tag="3" />

    <ImageButton
        android:id="@+id/downloadBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/settingsBtn"
        android:layout_toLeftOf="@+id/settingsBtn"
        android:background="@drawable/download"
        android:tag="2" />

    <ImageButton
        android:id="@+id/wifiBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/logo"
        android:layout_toLeftOf="@+id/downloadBtn"
        android:background="@drawable/wifi"
        android:contentDescription="@string/wifi_description"
        android:tag="1" />

    <Button
        android:id="@+id/tvBtn"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:paddingTop="90sp"
        android:drawablePadding="-15sp"
        android:text="@string/tv_btn_label"
        android:background="@drawable/tv"
        android:tag="5" />

    <Button
        android:id="@+id/movieBtn"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/tvBtn"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF"
        android:paddingTop="70sp"
        android:text="@string/movie_btn_label"
        android:layout_toRightOf="@+id/tvBtn"
        android:src="@drawable/ic_launcher"
        android:tag="6" />

    <ImageButton
        android:id="@+id/ImageButton02"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/movieBtn"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/movieBtn"
        android:src="@drawable/ic_launcher"
        android:tag="7" />

    <ImageButton
        android:id="@+id/ImageButton03"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/ImageButton02"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ImageButton02"
        android:src="@drawable/ic_launcher"
        android:tag="8" />

    <ImageButton
        android:id="@+id/ImageButton04"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/ImageButton03"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ImageButton03"
        android:src="@drawable/ic_launcher"
        android:tag="9" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvBtn"
        android:layout_below="@+id/tvBtn"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_launcher"
        android:tag="10" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:src="@drawable/ic_launcher"
        android:tag="11" />

</RelativeLayout> 

